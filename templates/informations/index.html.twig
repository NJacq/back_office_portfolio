{% extends 'base.html.twig' %}

{% block title %}Informations{% endblock %}

{% block body %}

<a class="text-muted" href="{{ path('logout') }}">Déconnexion</a>

<div class="nav">
    <a class="lienPages" href="/admin/projets/">Projets</a>
    <a class="lienPages" href="/admin/images">Images</a>
    <a class="lienPages" href="/admin/competences">Compétences</a>
    <a class="lienPages" href="/admin/projets_images/">Projets_images</a>
    <a class="lienPages" href="/admin/projets_competences/">Projets_compétences</a>
    <a class="lienPages" href="">Informations</a>
</div>
    <h1>Informations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Tel</th>
                <th>Tel_interna</th>
                <th>Cv_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in informations %}
            <tr>
                <td>{{ information.id }}</td>
                <td>{{ information.description }}</td>
                <td>{{ information.tel }}</td>
                <td>{{ information.telInterna }}</td>
                <td>{{ information.cvUrl }}</td>
                <td>
                    <div class="action">
                        <a class="stylebouton" href="{{ path('informations_show', {'id': information.id}) }}">Voir</a>
                        <a class="stylebouton" href="{{ path('informations_edit', {'id': information.id}) }}">Modifier</a>
                        {{ include('informations/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="commande">
        <a class="stylebouton" href="{{ path('informations_new') }}">Créer une information</a>
    </div>
{% endblock %}