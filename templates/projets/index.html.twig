{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
<div>
    <a class="text-muted" href="{{ path('logout') }}">Déconnexion</a>
</div>
<div  class="nav">
<a class="lienPages" href="">Projets</a>
<a class="lienPages" href="/admin/images">Images</a>
<a class="lienPages" href="/admin/competences">Compétences</a>
<a class="lienPages" href="/admin/projets_images/">Projets_images</a>
<a class="lienPages" href="/admin/projets_competences/">Projets_compétences</a>
<a class="lienPages" href="/admin/informations/">Informations</a>
</div>
    <h1>Projets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nom }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.image }}</td>
                <td>{{ projet.adresse }}</td>
                <td>
                    <div class="action">
                        <a class="stylebouton" href="{{ path('projets_show', {'id': projet.id}) }}">Voir</a>
                        <a class="stylebouton" href="{{ path('projets_edit', {'id': projet.id}) }}">Modifier</a>
                        {{ include('projets/_delete_form.html.twig') }}
                    </div>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="commande">
    <a class="stylebouton" href="{{ path('projets_new') }}">Créer un nouveau projet</a>
</div>
{% endblock %}