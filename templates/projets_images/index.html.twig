{% extends 'base.html.twig' %}

{% block title %}ProjetsImages{% endblock %}

{% block body %}
<div>
    <a class="text-muted" href="{{ path('logout') }}">Déconnexion</a>
</div>
<div class="nav">
    <a class="lienPages" href="/admin/projets/">Projets</a>
    <a class="lienPages" href="/admin/images">Images</a>
    <a class="lienPages" href="/admin/competences">Compétences</a>
    <a class="lienPages" href="">Projets_images</a>
    <a class="lienPages" href="/admin/projets_competences/">Projets_compétences</a>
    <a class="lienPages" href="/admin/informations/">Informations</a>
</div>

    <h1>ProjetsImages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_projet</th>
                <th>Id_image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projets_image in projets_images %}
            <tr>
                <td>{{ projets_image.id }}</td>
                <td>{{ projets_image.idProjet }}</td>
                <td>{{ projets_image.idImage }}</td>
                <td>
                    <div class="action">
                        <a class="stylebouton" href="{{ path('projets_images_show', {'id': projets_image.id}) }}">Voir</a>
                        <a class="stylebouton" href="{{ path('projets_images_edit', {'id': projets_image.id}) }}">Modifier</a>
                        {{ include('projets_images/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="commande">
        <a class="stylebouton" href="{{ path('projets_images_new') }}">Créer un nouveau projet_images</a>
    </div>
{% endblock %}